<section class="mt-6">
  <div class="pb-3 mb-3 border-b border-base-content/20">
    <div class="text-2xl font-semibold  text-base-content">{@page_title}</div>
  </div>
  <ul class="space-y-3">
    <Bonfire.UI.Coordination.TaskPreviewLive
      :if={length(@intents) > 0}
      :for={task <- @intents || []}
      object={task}
      show_likes
    />
    <Bonfire.UI.Common.EmptyFeed
      :if={length(@intents) == 0}
      feedback_title={l("No tasks have been found")}
    />
  </ul>
</section>
